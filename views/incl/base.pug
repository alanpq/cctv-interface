doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Camera Web Interface
    link(rel="stylesheet", href="style/style.css")
    block head
  body
    header 
      nav
        a.title Camera Web Interface 
        span.grow
        each p in pages 
          if page == p.route
            a.selected(href=p.route)=p.name 
          else 
            a(href=p.route)=p.name
    main
      block content
    footer 
      block foot